{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "sideEffects": [
    "**/*.css"
  ],
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./styles.css": "./dist/index.css",
    "./components/*": "./src/components/*",
    "./theme.css": "./src/styles/theme.css"
  },
  "scripts": {
    "build": "tailwindcss -i ./src/styles/globals.css -o ./dist/index.css --minify && tsup",
    "lint": "eslint . --max-warnings 0",
    "dev": "concurrently \"tailwindcss -i ./src/styles/globals.css -o ./dist/index.css --watch\" \"tsup --watch\"",
    "clean": "rm -rf .turbo node_modules dist"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/tailwind-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwindcss": "^4.1.6",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "lucide-react": "^0.510.0",
    "tailwind-merge": "^2.2.1"
  }
}